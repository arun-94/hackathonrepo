<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogTheme</item>
        <item name= "colorPrimaryDark">@color/purple_dark_primary</item>
        <item name = "colorPrimary">@color/purple_primary</item>
        <item name= "colorAccent">@color/orange_accent</item>
        <item name="colorButtonNormal">@color/purple_primary</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="TutorialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogTheme</item>
        <item name= "colorPrimaryDark">#ff3f87c6</item>
        <item name = "colorPrimary">#ff4ba7f2</item>
        <item name= "colorAccent">@color/orange_accent</item>
        <item name="colorButtonNormal">@color/purple_primary</item>
    </style>

</resources>

